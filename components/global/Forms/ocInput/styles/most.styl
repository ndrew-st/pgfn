.oc-input-most
  position relative

  height 100%

  & .input
    width 100%
    height 56px
    padding 0 16px

    font-style normal
    font-weight normal
    font-size 18px
    line-height 28px
    letter-spacing 0.1px
    color $dark

    background #F3F3F3
    border 0
    border-bottom 2px solid #D5D1DB
    border-radius 4px 4px 0px 0px
    box-sizing border-box

    anim all

    &--block
      display flex
      align-items center

      color $secondary

      cursor pointer

    rm-outline()

    &:hover
    &:focus
      border-color $primary

      anim(border-color)

    &.error
      border-color $danger

    &.icon-right
      padding-right 45px

  & .icon.map-pos-icon
    top auto
    right 20px
    bottom 18px

    width 16px
    height 20px

    & svg path
      fill $secondary

  & .label
    font-style normal
    font-weight bold
    font-size 14px
    line-height 32px
    letter-spacing 0.3px
    text-transform uppercase
    color $dark

    & .description
      display none

  &.subsc
    & .input
      font-size 15px

  &.half
    display flex
    align-items center

    & .label
      margin-right 8px

    & .measure
      position absolute
      top 0
      bottom 0
      right 8px
      left auto

      display flex
      align-items center

      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 28px;
      color: #272528;

    & .input
      width 95px
      padding-left 10px
      padding-right 35px

      border-width 1px

@media (min-width 1280px)
  .oc-input-most
    &.subsc
      & .input
        font-size 16px

    & .label
      & .description
        display block
        margin-top 8px
        margin-bottom 24px

        font-style normal
        font-weight normal
        font-size 14px
        line-height 17px
        text-transform none

        color $secondary
