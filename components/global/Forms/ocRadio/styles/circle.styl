.oc-radio-circle
  display flex
  flex-wrap wrap
  align-items center

  padding-left 48px
  width 100%

  & .icon
    position absolute
    top 0
    bottom 0
    left 0

    display flex
    align-items center
    margin auto 0

    & svg
      & circle.border
        stroke $dark

  &.checked .icon svg
    & circle.circle
      fill $dark

  & .label
    font-style normal
    font-weight normal
    font-size 18px
    line-height 22px
    color $dark

    @media (max-width 768px)
      font-size 16px
      line-height 20px

  & .add-text
    display flex
    flex-basis 100%

    font-style normal
    font-weight normal
    font-size 14px
    line-height 17px
    color $secondary

    @media (max-width 768px)
      font-size 13px
      line-height 16px
