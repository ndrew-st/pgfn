.oc-button-carousel
  position relative

  width 56px
  height 56px

  border-radius 50%
  background-color #fff
  box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.04)

  &:disabled
     display none

  & > span
   position absolute
   top 0
   left 0
   bottom 0
   right 0

   display flex
   align-items center
   justify-content center
   margin auto

   & svg
     & path
       fill $blue

  & > span.text-content
   font-size 0

  &.next
    right 0
    left auto

    @media(min-width 1310px)
      right -29px

  &.prev
    & > span svg
      transform rotate(180deg)
    &:after
      transform rotate(180deg)

    @media(min-width 1310px)
      left -29px
