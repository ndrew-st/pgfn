.oc-button-pagination
  display flex
  align-items center
  justify-content center
  width 40px
  height 40px
  padding 0

  anim all

  & > span.text-content
    font-size 0

  & > span.icon-content
    display block
    width 40px
    height 40px

    & svg
      & rect
        fill white
        stroke $secondary

        anim all

      & path
        stroke $dark

        anim all

  &.next > span.icon-content svg
    transform rotate(180deg)

  &:hover > span.icon-content svg
    & rect
      fill $danger
      stroke $danger

      anim all

    & path
      stroke white

      anim all
