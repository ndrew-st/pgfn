.oc-link-header-user
  & .text-link
    font-style normal
    font-weight normal
    font-size 16px
    line-height 24px
    letter-spacing 0.1px
    color $dark


  &:hover
    & .text-link
      color $primary

      anim color

    & .icon-content
      & svg
        & circle
        & path
          stroke $primary
