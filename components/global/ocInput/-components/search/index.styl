.input-wrapper
  &__icon
    position absolute
    top 0
    bottom 0

    display flex
    align-items center

    color $gray-1
    font-size $fs-1

    z-index 1

    &--left
      left 12px

    &--right
      right 12px

    &.find
      & svg circle
      & svg path
        stroke #DADADA

        anim(all)

      &.focused
        & svg circle
        & svg path
          stroke $blue

          anim(all)

    &.clear
      cursor pointer

      & svg path
        fill #DADADA

  &__left-padding > input
    padding-left 32px

  &__right-padding > input
    padding-right 32px

  &.main-search
    & > input
      height 48px

@media(min-width 1090px)
  .input-wrapper

    &.main-search
      & > input
        height 40px
        padding 0 16px

      & > span
        display none
