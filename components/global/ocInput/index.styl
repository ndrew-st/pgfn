.input-container
  position relative
  width 100%
  margin 0

  & > .label
    cursor pointer

  & > .input
    rm-outline()

  & > .icon
    position absolute
    top 0
    bottom 0

    display flex
    align-items center
    margin auto 0
    height 100%

    color $gray-1
    font-size $fs-1

    z-index 1

    &.icon-left
      left 12px

    &.icon-right
      right 12px
