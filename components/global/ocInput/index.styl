.input-container
  position relative
  width 100%

  &__icon
    position absolute
    top 0
    bottom 0

    display flex
    align-items center

    color $gray-1
    font-size $fs-1

    z-index 1

    &--left
      left 12px

    &--right
      right 12px

    &.find
      & svg circle
      & svg path
        stroke #DADADA

        anim(all)

      &.focused
        & svg circle
        & svg path
          stroke $blue

          anim(all)

    &.clear
      cursor pointer

      & svg path
        fill #DADADA
