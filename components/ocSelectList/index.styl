.main-box
  position relative

.list-top
  border: 1px solid #a3a3a3
  border-radius 3px
  width 242px
  height 38px
  text-align left
  line-height 38px
  cursor pointer
  position relative

.man
    width: 22px;
    vertical-align: middle;
    margin: 0 4px 0 10px;

.arrow-down
  height 8px
  transform: rotate(90deg)
  position: absolute
  right 16px
  top 16px

.list-box
  visibility hidden
  max-height 0
  position absolute
  border 2px solid rgb(170, 170, 170)
  border-radius 0 0 4px 4px

.list-item
  visibility hidden
  max-height 0
  background-color #fff
  cursor pointer
  text-align center
  width 232px
  border-bottom 1px solid #e6e8ea

.active
  visibility visible
  max-height initial
  line-height 38px

.img-v
  width 15px
  height 15px
  margin-right 15px
