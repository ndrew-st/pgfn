.guests
  position relative

  width 100%
  padding 24px 15px

  background: #FFFFFF;
  box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
  border-radius: 0px 0px 4px 4px
  box-sizing border-box

  &__list
    margin 0
    padding 0

    list-style none

  &__item
    margin-bottom 24px

    &:last-child
      margin-bottom 0
