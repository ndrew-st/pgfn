.description-block
  margin-bottom 40px
  padding 0 18px

  @media(min-width 1280px)
    max-width 1280px
    margin-left auto
    margin-right auto
    padding 0

  &__title
    margin 0
    margin-bottom 16px

    font-style normal
    font-weight: bold
    font-size: 18px
    line-height: 24px
    letter-spacing: -0.1px
    color: #272528

  &__desc
    margin 0
    margin-bottom 8px

    font-style: normal
    font-weight: normal
    font-size: 15px
    line-height: 18px
    color: #989BA8

@media(min-width 1090px)
  .description-block
    margin-bottom 70px

    &__title
      margin-bottom 24px

      font-size: 32px
      line-height: 24px

    &__desc
      margin-bottom 16px

      font-size: 16px
      line-height: 24px
