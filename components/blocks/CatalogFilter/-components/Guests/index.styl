.guests
  width: 276px
  padding: 28px
  padding-bottom: 0

  background: #FFFFFF;
  box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
  border-radius: 12px;
  box-sizing: border-box;

  &__list
    margin: 0
    padding: 0

    list-style none

  &__item
    margin-bottom: 24px

    &:last-child
      margin-bottom: 32px
