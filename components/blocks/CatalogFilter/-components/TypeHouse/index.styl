.type-filter
  width: 268px
  padding: 28px
  padding-bottom: 0

  box-sizing border-box
  background #FFFFFF
  box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
  border-radius 12px

  &__list
    margin: 0
    margin-bottom: 28px
    padding: 0

    list-style none

  &__item
    margin-bottom: 16px
