.flex
  display flex
  flex-wrap wrap

  &__input-container
    display flex
    justify-content space-between

  &__error
    display inline-block
    margin-top 10px
    flex-basis 100%

    color $danger

  .form-user-pass
    flex-wrap wrap

    &__label
      width 50%

.p15
    font-style normal
    font-weight normal
    font-size 18px
    line-height 28px
    letter-spacing 0.1px
    color #272528
    margin-top 8px
    margin-bottom 44px

.btn13
  display block
  width 160px
  height 56px
  margin-top 95px
  margin-left auto
  margin-right 0
  padding 17px 0 15px 0

  border-radius 4px
  border none

  font-style normal
  font-weight bold
  font-size 16px
  line-height 24px
  text-align center
  letter-spacing 0.1px
  color #ffffff
  background-color #3D88C8

  transition background-color 0.2s
  cursor pointer

  &:disabled
    color #272528
    background-color #DFE1E5

.username
    padding 14px 16px
    width 202px
    height 28px
    background #F3F3F3
    box-shadow inset 0px -1px 0px #D5D1DB
    border-radius 4px 4px 0px 0px
    border none
    outline none

    font-style normal
    font-weight normal
    font-size 18px
    line-height 28px
    letter-spacing 0.1px
    color #272528
    transition box-shadow 0.2s

.userpassword
    padding 14px 16px
    width 202px
    height 28px
    background #F3F3F3
    box-shadow inset 0px -1px 0px #D5D1DB
    border-radius 4px 4px 0px 0px
    border none
    outline none

    font-style normal
    font-weight normal
    font-size 18px
    line-height 28px
    letter-spacing 0.1px
    coloractive_btn #272528
    transition box-shadow 0.2s

.username:focus, .userpassword:focus
    box-shadow inset 0px -2px 0px $primary

@media (max-width 750px)
    .flex
        display block

    .p15
        margin-bottom 60px

    .btn13
      position static
      width 284px
      margin-top 49px

    .username
        width 252px

    .userpassword
        margin-left 0
        margin-top 40px
        width 252px


