.sign-up

  &__button-container
    display flex
    width 100%
    justify-content space-between

  & .go-back
    display block
    width 11%
    align-self flex-end

    color $primary

    rm-outline()

    &.first
      position absolute
      bottom 64px
      right 64px

.box__signup
  min-height 296px
  top calc(50% - 212px)

p.lic
  margin-top 36px
  color #989BA8

  font-style normal
  font-weight normal
  font-size 16px
  line-height 20px
  letter-spacing 0.1px

.lic__privacy
  color $primary

.enter-top
    display none

.enter-bottom
    display inline-block
    margin-top 36px

    font-style normal
    font-weight normal
    font-size 16px
    line-height 24px
    letter-spacing 0.1px
    color #3D88C8


@media (max-width 750px)
  .sign-up
    background-color #FFFFFF

  .enter-top
    display inline-block
    text-align center
    width 100%
    margin-top 32px

  .enter-bottom
    display none


