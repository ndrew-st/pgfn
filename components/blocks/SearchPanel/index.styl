.search-panel
  width 300px
  padding 20px

  background #FFFFFF
  box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
  border-radius 12px

  box-sizing: border-box;

  @media (min-width 1090px)
    width 344px

  &__list
    margin 8px -20px
    margin-bottom -4px
    padding 0

    list-style none

  &__button
    display flex
    width 100%
    padding 12px 25px

    border 0
    background-color transparent

    cursor pointer

    rm-outline()

    &:hover
      background-color #ECECEC

      anim(all)

@media (min-width 1090px)
  .search-panel
    margin-left -172px
