.footer
  max-width 1280px
  padding 0 18px
  margin 0 auto

  border-top 1px solid #ECECEC

  @media(min-width 1280px)
    padding 0

  &__container
    display flex
    flex-wrap wrap
    justify-content space-between
    padding-top 24px
    padding-bottom 75px

  & .footer-menu
    width 100%
    max-width 670px

    &__types
      display flex
      justify-content space-between
      flex-wrap wrap
      margin 0
      margin-bottom 10px
      padding 0

      list-style none

      @media(min-width 1090px)
        margin-bottom 0

    &__type
      align-self flex-start
      width 45%
      margin-bottom 35px

      @media(min-width 1090px)
        margin-bottom 0

  & .footer-menu-type
    width 45%
    max-width 200px

    &:last-child
      margin-top -80px

      @media(min-width 645px)
        margin-top 0

    &__title
      margin 0
      margin-bottom 4px

      font-style: normal;
      font-weight: bold;
      font-size: 14px;
      line-height: 32px;
      letter-spacing: 0.3px;
      text-transform: uppercase;
      color: #272528;

    &__list
      margin 0
      padding 0

      list-style none

    &__item
      margin-bottom 5px

    &__link
      font-style: normal;
      font-weight: normal;
      font-size: 14px;
      line-height: 28px;
      color: #272528;

      transition color 0.3s ease-in-out 0s

      &:hover
      &:focus
        outline 0

      &:hover
        color #5604C1

        transition color 0.3s ease-in-out 0s

  & .footer-contacts
    display flex
    align-self flex-start
    justify-content space-between
    align-items center
    margin-bottom 35px
    flex-basis 100%
    max-width 380px
    width 100%

    &__phone
      font-style: normal;
      font-weight: bold;
      font-size: 18px;
      line-height: 32px;
      letter-spacing: 0.3px;
      text-transform: uppercase;
      color: #272528;

      &:hover
      &:focus
        outline 0

    &__social-list
      display flex
      justify-content space-between
      width 100%
      max-width 220px
      margin 0
      padding 0

      list-style none

    &__social-link
      &:hover
      &:focus
        outline 0

    &__social-img
      vertical-align bottom

  & .footer-pay
    width 100%
    flex-basis 100%

    @media(min-width 1090px)
      flex-basis auto
      margin-left auto
      margin-right 0
      margin-top -59px

    &__title
      margin 0
      margin-bottom 8px

    &__list
      display flex
      align-items center
      flex-wrap wrap
      margin 0
      padding 0

      list-style none

    &__item
      margin-right 15px
      margin-bottom 24px

      &:last-child
        margin-right 0

      @media(min-width 1090px)
        margin-bottom 0

  &__author
    margin-left -18px
    margin-right -18px
    padding 20px 18px
    margin-bottom 50px

    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 24px;
    color: #989BA8;

    border-top 1px solid #ECECEC

    @media(min-width 1280px)
      margin-bottom 0
      margin-left 0
      margin-right 0
      padding-left 0
      padding-right 0

@media(min-width 1090px)
  .footer
    & .footer-contacts
      max-width 380px
    & .footer-pay
      max-width 380px
