.counter
  display flex
  align-items center
  justify-content space-between

  &__title
    margin 0
    margin-bottom 5px

    font-style: normal
    font-weight: bold
    font-size: 14px
    line-height: 14px
    color: #272528

  &__sub-title
    font-style: normal
    font-weight: normal
    font-size: 12px
    line-height: 20px
    color: #989BA8

  &__content
    width 100%
    max-width 108px
    display flex
    align-items center
    justify-content space-between

  &__current
    font-style: normal
    font-weight: bold
    font-size: 14px
    line-height: 24px
    color: #272528
