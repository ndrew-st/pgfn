.search-panel
  width 300px
  padding 20px
  padding-bottom 0

  background #FFFFFF
  box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
  border-radius 12px
  box-sizing: border-box;

  @media (min-width 1090px)
    width 344px

  &__list
    margin 8px -20px
    margin-bottom 16px
    padding 0

    list-style none

  & .input-block
    position relative

    &__label
      display block
      width 100%

    &__icon
      position absolute
      right 16px
      top 0
      bottom 0

      display flex
      align-items center
      margin auto 0

      &--find
        & svg circle
        & svg path
          stroke #DADADA

      &--clear
        cursor pointer

        & svg path
          fill #DADADA

    &__input
      display block
      width 100%
      height 40px
      padding 0 16px

      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 20px;
      color: #272528;

      border: 2px solid #ECECEC;
      box-sizing: border-box;
      border-radius: 4px;

      rm-outline()

      &:hover
      &:focus
        border-color $blue

  &__button
    display flex
    width 100%
    padding 12px 25px

    border 0
    background-color transparent

    cursor pointer

    rm-outline()

    &:hover
      background-color #ECECEC
      transition all 0.3s ease-in-out 0s

@media (min-width 1090px)
  .search-panel
    margin-left -172px
