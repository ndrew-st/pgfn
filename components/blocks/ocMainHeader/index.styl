.fade-enter-active
.fade-leave-active
  transition opacity .1s

.fade-enter
.fade-leave-to
  opacity: 0

.header
  font-family inherit

  border-bottom 1px solid #ECECEC

  &__container
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    padding 15px 18px

    box-sizing border-box

  &__logo-link
    display inline-block
    margin-bottom 12px

    text-decoration none

  &__logo
    width 168px
    height 36px
    vertical-align bottom

    @media(min-width 1280px)
      width 186px
      height 32px

  &__geo
    display inline-block
    margin-bottom 12px

  .header-geo
    position relative

    &__toggle
      font-style normal
      font-weight normal
      font-size 16px
      line-height 24px
      letter-spacing 0.1px
      color #272528

      border: 0;
      background-color transparent

      cursor: pointer;

      &--text
        border-bottom 1px dashed #272528

      &--icon
        & svg
          display inline-block
          margin-bottom -4px

          & path
            fill #272528

      &.active-geo-button
        & span
          color $blue

          border-color $blue

          & svg path
            fill $blue

      rm-outline()

    &__content
      position absolute
      top 39px
      right 0

      z-index 99

      @media (min-width 1090px)
        left 50%
        right auto

  &__mobile-controls
    position fixed
    bottom 0
    left 0
    right 0

    width 100%

    z-index 99

  &__list-link
    display none

  &__controls
    display none

  .find-header
    position relative

    &__submit
      display none

  .find-header
    position relative

    width: 100%
    max-width 440px

    &__result-container
      position absolute
      top 40px
      left 0
      right 0

      padding 0

      background: #FFFFFF;
      box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
      border-radius: 0px 0px 4px 4px;

      box-sizing border-box
      z-index 999

  .header-result

    &__list
      margin 0
      padding 0

      list-style none

    &__item
      padding 0

    &__button
      display block
      width 100%
      padding 12px 18px

      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 20px;
      color: #272528;
      text-align left

      background-color transparent
      border 0
      cursor pointer

      anim(all)

      &:hover
        background-color #ECECEC
        anim(background-color)

      rm-outline()

  .mobile-controls
    display flex
    align-items center
    justify-content space-between
    min-height 50px
    margin 0
    padding 0 25px

    list-style none

    background: #FFFFFF;
    box-sizing border-box
    box-shadow: inset 0px 1px 0px #E9E9EC;

    &__item
      display flex
      justify-content center
      flex-wrap wrap

    &__button
      display flex
      justify-content center
      flex-wrap wrap
      flex-basis: 100%
      padding 0

      border 0
      background-color transparent

      &--icon
        & svg circle
        & svg path
          stroke #272528

        &.active-icon svg path
        &.active-icon svg circle
          stroke #7140B8

        &.icon-heart

          & svg
            width 16px
            height 14px

        &.icon-bag
          & svg rect
            stroke #272528

          &.active-icon svg rect
            stroke #7140B8

      &--link
        display block
        flex-basis 100%
        margin-top 0

        font-style: normal;
        font-weight: normal;
        font-size: 9px;
        line-height: 12px;
        text-align center
        letter-spacing: -0.1px;
        color: #272528;

        &.active-link
          color #7140B8

@media(min-width 1090px)
  .header
    position fixed
    top 0
    left 0
    right 0

    background-color white;

    z-index 999

    &__container
      display flex
      align-items center
      padding-top 22px
      padding-bottom 22px

    &__logo-link
      margin-right 36px
      margin-bottom 0

    &__list-link
      display flex
      margin 0
      padding 0

      list-style none

    &__geo
      margin-right 10px
      margin-bottom 0

    &__list-item
      margin-right 20px

      &:last-child
        margin-right 0

    &__link
      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 24px;
      letter-spacing: 0.2px;
      color: #272528;

      transition color 0.3s ease-in-out 0s

      &:hover
        color: #5604C1

        transition color 0.3s ease-in-out 0s

    &__controls
      display flex
      align-items center
      margin 0
      padding 0

      list-style none

    & .header-result
      &__text
        padding 24px 15px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        color: #000000;

        &--bold
          font-weight bold

    & .header-controls
      margin-right 0
      margin-left auto

      &__item
        position relative

        margin-right 30px

        &:hover
        &:focus
        &:active
          outline 0

        &:last-child
          margin-right 0

      &__select-list
        position absolute
        left 0
        right 0
        top 48px

        margin 0
        padding 0
        list-style none

        background: #FFFFFF;
        box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
        border-radius: 4px;

      &__button
        display block
        height 40px
        padding 0 18px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        letter-spacing: 0.1px;
        color: white

        border: 0;
        box-sizing: border-box;
        background-color $blue
        border-radius: 44px;

        cursor pointer

        rm-outline()

      &__link
        position relative

        display block
        padding-left 26px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        letter-spacing: 0.1px;
        color: #272528;

        box-sizing border-box

        &:hover
        &:focus
          outline 0

        &:before
          content ''
          position absolute
          left 0
          top 0
          bottom 0

          width 20px
          height 18px
          margin auto 0

          background url('/icons/user.svg') 0 0 no-repeat
          background-size 20px 18px

    & .header-add
      padding 0 15px

      &__item
        padding 12px 0

      &__button
        padding 0

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        display: flex;
        align-items: center;
        color: #272528;

        border 0
        cursor pointer
        background-color transparent

        &:hover
        &:focus
        &:active
          outline 0

        &:hover
          color $blue

    & .mobile-controls
      display none

    & .find-header
      max-width 520px
      margin-right 30px

      &__form
        display flex
        width 100%
        max-width 520px

      &__label
        width 495px

      &__result-container
        top 40px

        max-width 462px

      &__input
        height 40px
        padding-left 16px
        padding-right 48px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        color: #272528;

      &__submit
        position relative

        display block
        width 60px
        padding 0
        margin-left -40px

        background-color white
        border: 2px solid #ECECEC;
        border-radius: 0px 4px 4px 0px;

        z-index 10
        cursor pointer
        transition all 0.3s ease-in-out 0s

        &--text
          font-size 0

        &--icon
          position absolute
          top 0
          bottom 0
          left 0
          right 0

          width 14px
          height 16px
          margin auto

          & svg circle
          & svg path
            stroke #989BA8

            transition all 0.3s ease-in-out 0s

        &:hover
        &:focus
        &.active-search-button
          background-color $blue
          border-color $blue

          transition all 0.3s ease-in-out 0s

          & span
            & svg circle
            & svg path
              stroke white

              transition all 0.3s ease-in-out 0s

        rm-outline()

@media(min-width 1280px)
  .header
    &__container
      padding-left 0
      padding-right 0
      max-width 1280px
      margin 0 auto

    &__geo
      margin-right 50px
