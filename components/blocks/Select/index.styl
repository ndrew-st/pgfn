.select-container
  position relative

  &__button
    display inline-flex

  &__content
    position absolute
    left 0
    top 30px

    width auto
    padding 8px 6px
    padding-right 20px

    text-align right

    background: #FFFFFF;
    box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
    border-radius: 3px;
    box-sizing border-box

  &__list
    margin 0
    margin-bottom 16px
    padding 0

    list-style none

  &__item
    margin-bottom 12px

    &:last-child
      margin-bottom 0

  &__input
    & .label
      padding-left 36px

  &__save-button
    font-size 14px

