transition()

.header
  font-family inherit

  border-bottom 1px solid #ECECEC

  &__container
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    padding 15px 18px

    box-sizing border-box

  &__logo-link
    display inline-block
    margin-bottom 12px

  &__logo
    width 168px
    height 36px

    @media(min-width 1280px)
      width 186px
      height 32px

  &__geo
    display inline-block
    margin-bottom 12px

  .header-geo
    position relative

    &__content
      position absolute
      top 39px
      right 0

      z-index 99

      @media (min-width 1090px)
        margin-right -138px

  &__mobile-controls
    position fixed
    bottom 0
    left 0
    right 0

    width 100%

    z-index 99

  &__list-link
    display none

  &__controls
    display none

  .find-header
    position relative

    width: 100%
    max-width 440px

    &__input
      height 48px

    &__submit
      display none

    &__result-container
      position absolute
      top 49px
      left 0
      right 0

      padding 0

      background: #FFFFFF
      box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
      border-radius: 0px 0px 4px 4px

      box-sizing border-box
      z-index 999

  .header-result

    &__list
      margin 0
      padding 0

      list-style none

    &__item
      padding 0

  .mobile-controls
    display flex
    align-items center
    justify-content space-between
    min-height 50px
    margin 0
    padding 0 25px

    list-style none

    background: #FFFFFF
    box-sizing border-box
    box-shadow: inset 0px 1px 0px #E9E9EC

    &__item
      display flex
      justify-content center
      flex-wrap wrap

    &__button
      display flex
      justify-content center
      flex-wrap wrap
      flex-basis: 100%

@media(min-width 1090px)
  .header
    position fixed
    top 0
    left 0
    right 0

    background-color white

    z-index 999

    &__container
      display flex
      align-items center
      padding-top 22px
      padding-bottom 22px

    &__logo-link
      width 186px
      margin-bottom 0

    &__list-link
      display flex
      margin 0
      padding 0

      list-style none

    &__geo
      margin-right 10px
      margin-bottom 0

    &__list-item
      margin-right 20px

      &:last-child
        margin-right 0

    &__link
      font-style: normal
      font-weight: normal
      font-size: 18px
      line-height: 24px
      letter-spacing: 0.2px
      color: #272528

      transition color 0.3s ease-in-out 0s

      &:hover
        color: #5604C1

        transition color 0.3s ease-in-out 0s

    &__controls
      display flex
      align-items center
      margin 0
      padding 0

      list-style none

    & .header-result
      &__text
        padding 24px 15px

        font-style: normal
        font-weight: normal
        font-size: 16px
        line-height: 20px
        color: #000000

        &--bold
          font-weight bold

    & .header-controls
      margin-right 0
      margin-left auto

      &__item
        position relative

        margin-right 30px

        rm-outline()

        &:last-child
          margin-right 0

      &__select-list
        position absolute
        left 0
        right 0
        top 48px

        margin 0
        padding 0
        list-style none

        background: #FFFFFF
        box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
        border-radius: 4px

      &__link
        position relative

        display block
        padding-left 26px

    & .header-add
      padding 0

    & .mobile-controls
      display none

    & .find-header
      max-width 520px
      margin-right 30px

      &__form
        display flex
        width 100%
        max-width 520px

      &__input
        height 40px

        & > .input.input-left
          padding-left 16px
          padding-right 50px

        & span.icon
          display none

      &__result-container
        top 40px

        max-width 462px

      &__submit
        display block

@media(min-width 1280px)
  .header
    &__logo-link
      margin-right 36px

    &__container
      padding-left 0
      padding-right 0
      max-width 1280px
      margin 0 auto

    &__geo
      margin-right 50px
