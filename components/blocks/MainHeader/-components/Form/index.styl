.fade-enter-active
.fade-leave-active
  transition opacity .1s

.fade-enter
.fade-leave-to
  opacity 0

.form-container
  position fixed
  top 0
  left 0
  right 0

  width 100%
  height 100vh

  background white

  z-index 99

  &.submitted
    position static

    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center

    padding-top 24px
    padding-bottom 12px
    padding-right 10px
    height auto

    box-sizing border-box

    & .form-header
      min-height auto
      padding-top 0
      padding-bottom 0

  & .form-result
    flex-basis 100%

    &.success
      display flex
      flex-basis auto
      align-self flex-end

      &--date
        font-style normal
        font-weight normal
        font-size 12px
        line-height 28px
        color $dark

    &__search-container
      padding 0 18px
      padding-right 8px
      margin-top 15px

@media (min-width 1090px)
  .form-container
    display none
