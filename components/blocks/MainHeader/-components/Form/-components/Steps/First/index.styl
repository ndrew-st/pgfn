.step-container
  height 497px
  padding 0 18px

  overflow auto

  &__title
    margin 0
    margin-bottom 4px

    font-style normal
    font-weight bold
    font-size 18px
    line-height 24px
    letter-spacing -0.1px
    color $dark

  &__image
    &.container
      display inline-block
      margin-right 28px

  &__link
    display block
    margin-bottom 40px

  &__content
    margin 0
    padding 0

    list-style none

  &__item
    display flex
    align-items center
    margin-bottom 16px

    background #FFFFFF
    box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
    border-radius 4px

    &:last-child
      margin-bottom 0

  &__input.radio
    height 65px
    & .label
      padding-left 28px
