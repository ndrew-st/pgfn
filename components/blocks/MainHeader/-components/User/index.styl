.header-user
  &__toggle
    display flex
    align-items center
    justify-content space-between
    height 40px
    padding 4px
    padding-right 18px

    border: 1px solid #D4D6DE;
    box-sizing: border-box;
    border-radius: 44px;
    background-color transparent

  &__list
    position absolute
    top 48px
    right 0

    min-width 232px
    margin 0
    padding 0

    list-style none

    background: #FFFFFF;
    box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
    border-radius: 12px;

  &__button
    display flex
    align-items center
    padding 12px 16px

    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 20px;
    color: #272528;

    background-color transparent
    border 0
    cursor pointer

  .toggle
    cursor pointer

    rm-outline()

    &__img-container
      display inline-flex
      align-items center
      justify-content center
      width 32px
      height 32px
      margin-right 12px

      font-style: normal;
      font-weight: bold;
      font-size: 18px;
      line-height: 22px;
      color: #FFFFFF;

      border-radius 50%
      background-color #68BFE4


    &__text
      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 22px;
      text-align: center;
      color: #272528;
