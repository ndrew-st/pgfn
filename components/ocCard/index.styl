.oc-card
  flex-grow 1
  flex-basis 200px
  margin 10px

  &:first-child
    margin-left 0

  &:last-child
    margin-right 0

  &__image-wrapper
    max-height 120px
    overflow hidden

  &__city
    text-transform uppercase
    font-weight bold
    font-size 0.75rem

  &__name
    font-weight bold

  &__params > div
    margin-top 5px
