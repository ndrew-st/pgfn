.direction-card
  position relative

  display flex
  flex-wrap wrap
  min-width 252px
  height 320px
  padding 20px
  margin-right 16px

  border-radius 20px

  box-sizing border-box
  transition all 0.3s linear 0s

  &:last-child
    margin-right 0

  &:before
    content ''

    position absolute
    left 0
    top 0

    width 100%
    height 100%

    background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 11%, rgba(0, 0, 0, 0.11) 29.48%, rgba(0, 0, 0, 0.15) 53.13%, rgba(0, 0, 0, 0.55) 74.35%);
    border-radius 20px

  &__bg-img
    position absolute
    top 0
    left 0

    width 252px
    height 320px

    z-index -1

  &__property-list
    position relative

    margin 0
    align-self flex-start
    padding 0

    list-style none

    z-index 5

  &__property
    position relative

    margin-bottom 4px
    padding-left 24px

    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 20px;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    color: #FFFFFF;

    box-sizing border-box

    &:before
      content ''

      position absolute
      left 0
      top 0
      bottom 0

      margin auto 0

      background-position 0 0
      background-repeat no-repeat

    &--temp:before
      width 15px
      height 15px

      background-image url('/cart/temp.svg')
      background-size 15px 15px

    &--water-temp:before
      width 13px
      height 8px

      background-image url('/cart/tempWater.svg')
      background-size 13px 8px

    &--current:before
      width 11px
      height 13px

      background-image url('/cart/current.svg')
      background-size 11px 13px

    &:last-child
      margin-bottom 0

  &__button-like
    position absolute
    top 20px
    right 20px

    width 22px
    height 20px

    font-size 0

    background-color transparent
    border 0

    background url('/cart/likeN.svg') 0 0 no-repeat
    background-size 22px 20px

    z-index 5
    cursor pointer

    &:hover
    &:focus
      outline 0

    &.card-liked
      opacity 1
      background-image url('/cart/likeY.svg')

  &__title
    position relative
    align-self flex-end
    flex-basis 100%

    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 20px;
    letter-spacing: 0.2px;
    color: #FFFFFF;

    z-index 5
    cursor pointer

  &__footer
    position relative

    display flex
    flex-basis 100%
    margin 0
    align-self flex-end

    z-index 5

  &__rate
    margin 0
    margin-right 10px
    padding 4px 8px

    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 20px;
    letter-spacing: -0.5px;
    text-transform: uppercase;
    color: #FFFFFF;

    background: #EB574F;
    border-radius: 4px;

  &__reviews
    display flex
    align-items center

    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 20px;
    color: #FFFFFF;
  
  &__type
    position relative

    display flex
    align-items center
    padding-left 13px

    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 20px;
    color: #FFFFFF;

    &:before
      content ''
      position absolute
      top 50%
      left 7px

      width 2px
      height 2px

      background-color #ffffff
      border-radius 5px

@media(min-width 1280px)
  .direction-card
    min-width 416px
    max-width 416px
    height 512px
    padding 36px

    &:before
      border-radius 30px

    &__bg-img
      width 416px
      height 512px

    &__button-like
      right 34px
      top 37px

      width 24px
      height 22px

      background-size 24px 22px

      opacity 0
      transition opacity 0.3s linear 0s

    &:hover .direction-card__button-like
      opacity 1
      transition opacity 0.3s ease-in-out 0s

    &__property-list
      display flex

    &__property
      font-size 14px
      margin-bottom 0
      margin-right 20px

      &:last-child
        margin-right 0

      &--temp
        padding-left 24px

        &:before
          width 18px
          height 18px

          background-size 18px 18px

      &--water-temp
        padding-left 21px

        &:before
          width 15px
          height 9px

          background-size 15px 9px

      &--current
        padding-left 18px

        &:before
          width 12px
          height 15px

          background-size 12px 15px

    &:hover
      
      .direction-cart__button-like
        opacity 1
        transition opacity 0.3s linear 0s
    
    &__title
      margin-bottom -60px

      font-size: 26px;
      line-height: 28px;

    &__reviews
      font-size 13px

    &__type
      font-size 13px