.direction-card
  position relative

  display flex
  flex-wrap wrap
  min-width 252px
  width 100%
  max-width 252px
  height 320px
  padding 20px
  margin-right 16px

  border-radius 20px

  box-sizing border-box
  transition all 0.3s linear 0s
  background-position: 0 0;
  background-repeat: no-repeat;
  background-size cover
  cursor pointer

  &:last-child
    margin-right 0

  &:before
    content ''

    position absolute
    left 0
    top 0

    width 100%
    height 100%

    background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 11%, rgba(0, 0, 0, 0.11) 29.48%, rgba(0, 0, 0, 0.15) 53.13%, rgba(0, 0, 0, 0.55) 74.35%);
    border-radius 20px

  &__button-like
    position absolute
    top 20px
    right 20px

    width 22px
    height 20px

    font-size 0

    background-color transparent
    border 0

    z-index 5
    cursor pointer

    &--icon
      & svg path
        stroke white

        anim(all)

    &.card-liked
    &:hover
      & span svg path
        stroke $red
        fill $red

        anim(all)

    rm-outline()

  &__title
    position relative
    align-self flex-end
    flex-basis 100%
    margin-bottom -50px

    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 20px;
    letter-spacing: 0.2px;
    color: #FFFFFF;

    z-index 5

  &__footer
    position relative

    display flex
    flex-basis 100%
    margin 0
    margin-top 36px
    align-self flex-end

    z-index 5

  &__rate
    margin 0
    margin-right 10px
    padding 4px 8px

    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 20px;
    letter-spacing: -0.5px;
    text-transform: uppercase;
    color: #FFFFFF;

    background: #EB574F;
    border-radius: 4px;

  &__reviews
    display flex
    align-items center

    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 20px;
    color: #FFFFFF;

  &__type
    position relative

    display flex
    align-items center
    padding-left 13px

    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 20px;
    color: #FFFFFF;

    &:before
      content ''
      position absolute
      top 50%
      left 7px

      width 2px
      height 2px

      background-color #ffffff
      border-radius 5px

@media(min-width 1280px)
  .direction-card
    min-width 416px
    max-width 416px
    height 512px
    padding 36px

    &:before
      border-radius 20px

    &__button-like
      right 34px
      top 37px

      width 24px
      height 22px

      background-size 24px 22px

      opacity 0
      transition opacity 0.3s linear 0s

      &.card-liked
        opacity 1

        & span svg path
          stroke $red
          fill $red

    &:hover .direction-card__button-like
        opacity 1
        transition opacity 0.3s linear 0s

    &__title
      margin-bottom -120px

      font-size: 26px;
      line-height: 28px;

    &__reviews
      font-size 13px

    &__type
      font-size 13px
