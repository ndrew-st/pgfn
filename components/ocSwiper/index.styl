.swiper {
    display: flex
    width: 100%;
}

.fade-enter-active, .fade-leave-active {
    transition: opacity 0.2s;
}

.fade-enter, .fade-leave-to {
    opacity: 0;
}

.arrow-box__left {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: rgb(255, 255, 255);
    opacity: 0.7;
    position: absolute;
    top: 50%;
    cursor: pointer;
    margin: 0 0 0 20px;

    &__inner {
        width: 36px;
        height: 36px;
        border: 1px solid rgb(210, 210, 210);
        border-radius: 50%;
        margin: 3px 0 0 3px;
        display: flex;
        justify-content: center;

        &__svg {
            width: 16px;
            transform: rotate(90deg);
        }
    }
}

.arrow-box__right {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: rgb(255, 255, 255);
    opacity: 0.7;
    position: absolute;
    top: 50%;
    right: 20px;
    cursor: pointer;

    &__inner {
        width: 36px;
        height: 36px;
        border: 1px solid rgb(210, 210, 210);
        border-radius: 50%;
        margin: 3px 0 0 3px;
        display: flex;
        justify-content: center;

        &__svg {
            width: 16px;
            transform: rotate(-90deg);
        }
    }
}