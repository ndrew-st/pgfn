.fade-enter-active
.fade-leave-active
  transition opacity .1s

.fade-enter
.fade-leave-to
  opacity: 0

.header
  font-family inherit

  border-bottom 1px solid #ECECEC

  &__container
    padding 15px 18px

    box-sizing border-box

  &__logo-link
    display block
    margin-bottom 12px

    text-decoration none
  
  &__logo
    width 126px
    height 36px
    vertical-align bottom

    @media(min-width 1280px)
      width 135px
      height 36px

  &__mobile-controls
    position fixed
    bottom 0
    left 0
    right 0

    width 100%

    z-index 999
  
  &__list-link
    display none

  &__controls
    display none

  .find-header
    position relative

    &__submit
      display none

  .find-header
    position relative

    &__result-container
      position absolute
      top 48px
      left 0
      right 0

      padding 0 18px

      background: #FFFFFF;
      box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
      border-radius: 0px 0px 4px 4px;

      box-sizing border-box
      z-index 999

  .header-result

    &__list 
      margin 0
      padding 0

      list-style none

    &__item
      padding 12px 0

      cursor pointer

    &__button
      display block
      width 100%
      padding 0

      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 20px;
      color: #272528;
      text-align left

      background-color transparent
      border 0
      cursor pointer

      &:hover
        color: #7140B8

      &:hover
      &:focus
        outline 0

  .mobile-controls
    display flex
    align-items center
    justify-content space-between
    min-height 50px
    margin 0
    padding 0 25px

    list-style none

    background: #FFFFFF;
    box-sizing border-box
    box-shadow: inset 0px 1px 0px #E9E9EC;

    &__item
      display flex
      justify-content center
      flex-wrap wrap

    &__button
      display flex
      justify-content center
      flex-wrap wrap
      flex-basis: 100%
      padding 0

      border 0
      background-color transparent

      &--icon 
        & svg
          fill #272528

        &.active-icon svg
          fill #7140B8

      &--link
        display block
        flex-basis 100%
        margin-top 5px

        font-style: normal;
        font-weight: normal;
        font-size: 9px;
        line-height: 12px;
        text-align center
        letter-spacing: -0.1px;
        color: #272528;

        &.active-link
          color #7140B8

@media(min-width 1090px)
  .header
    position fixed
    top 0
    left 0
    right 0

    background-color white;

    z-index 999

    &__container
      display flex
      align-items center
      padding-top 22px
      padding-bottom 22px

    &__logo-link
      margin-right 24px

    &__logo
      width 135px
      height 36px

    &__logo-link
      margin-bottom 0

    &__list-link
      display flex
      margin 0
      padding 0

      list-style none

    &__list-item
      margin-right 20px

      &:last-child
        margin-right 0

    &__link
      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 24px;
      letter-spacing: 0.2px;
      color: #272528;

      transition color 0.3s ease-in-out 0s

      &:hover
        color: #5604C1

        transition color 0.3s ease-in-out 0s

    &__controls
      display flex
      align-items center
      margin 0
      padding 0

      list-style none

    & .header-result
      &__text
        padding 24px 0

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        color: #000000;

        &--bold
          font-weight bold

    & .header-controls
      margin-right 0
      margin-left auto

      &__item
        position relative

        margin-right 30px

        &:last-child
          margin-right 0

      &__select-list
        position absolute
        left 0
        right 0
        top 42px

        margin 0
        padding 0
        list-style none
        
        background: #FFFFFF;
        box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08);
        border-radius: 4px;

      &__button
        display block
        padding 0
        height 40px
        padding 0 18px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        letter-spacing: 0.1px;
        color: #272528;

        border: 1px solid #D4D6DE;
        box-sizing: border-box;
        background-color transparent
        border-radius: 44px;
        transition color 0.3s ease-in-out 0s
        cursor pointer

        &:hover
        &:focus
          outline 0

        &:hover
          color #7140B8

          transition color 0.3s ease-in-out 0s

      &__link
        position relative

        display block
        padding-left 26px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        letter-spacing: 0.1px;
        color: #272528;

        box-sizing border-box

        &:hover
        &:focus
          outline 0

        &:before
          content ''
          position absolute
          left 0
          top 0
          bottom 0

          width 20px
          height 18px
          margin auto 0

          background url('/icons/user.svg') 0 0 no-repeat
          background-size 20px 18px

    & .header-add
      padding 0 15px

      &__item
        padding 12px 0

      &__button
        padding 0

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        display: flex;
        align-items: center;
        color: #272528;

        border 0
        cursor pointer
        background-color transparent

        &:hover
          color #5271ff

    & .mobile-controls
      display none

    & .find-header
      width 100%
      max-width 520px
      margin-right 30px
      
      &__form
        display flex
        width 100%
        max-width 520px

      &__label
        width 495px

      &__result-container
        top 40px

        max-width 455px

      &__input
        height 40px
        padding-left 16px
        padding-right 48px

        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        color: #272528;

      &__submit
        position relative

        display block
        width 60px
        padding 0
        margin-left -40px

        background: #680FDC;
        border 0
        border-radius: 0px 4px 4px 0px;

        z-index 10
        cursor pointer

        &--text
          font-size 0

        &--icon
          position absolute
          top 0
          bottom 0
          left 0
          right 0

          width 14px
          height 16px
          margin auto

          & svg
            fill white;

        &:hover
        &:focus
          outline 0

@media(min-width 1280px)
  .header
    &__container
      padding-left 0
      padding-right 0
      max-width 1280px
      margin 0 auto