.carousel
  position relative

  &__wrapper-container
    height 100%

    overflow-y hidden

  &__wrapper
    position relative

    min-height 120px

    overflow-x scroll
    scroll-behavior smooth

    box-sizing border-box

    -ms-overflow-style none
    scrollbar-width none

    &::-webkit-scrollbar
      display none

  &__list
    display flex

    transition left 0.5s ease-in-out 0s
    backface-visibility hidden
    -webkit-backface-visibility hidden

  .btn-carousel
    display none

    @media(min-width 1280px)
      display block

    &__prev
    &__next
      position absolute
      top 50%

      width 56px
      height 56px
      margin 0
      margin-top -27px

      font-size 0

      border 0
      border-radius 50%
      background-color #fff
      box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.04)

      cursor pointer
      z-index 10
      transition all 0.3s linear 0s

      &.disabled
        display none

      &:hover
      &:focus
        outline 0

      &:hover
        opacity 0.7
        transition all 0.3s linear 0s

      &:after
        content ''

        position absolute
        top 0
        bottom 0
        left 0
        right 0

        display block
        width 24px
        height 22px
        margin auto

        font-size 0

        background url('/arrow-cart.svg') 0 0 no-repeat
        background-size 24px 22px

        z-index 11

    &__next
      right 0
      left auto

      @media(min-width 1310px)
        right -29px

    &__prev
      &:after
        transform rotate(180deg)

      @media(min-width 1310px)
        left -29px

  &__dots-container
    position absolute
    bottom 12px
    left 0
    right 0

    display flex
    align-items center
    width 100%
    max-width 70px
    margin 0 auto

    z-index 10
    overflow hidden
    box-sizing border-box

  &__dots
    display flex
    align-items center
    justify-content space-between
    width 100%
    margin 0
    padding 0

    list-style none
    box-sizing border-box

    transition transform 0.1s linear 0s

  &__dot
    display flex
    align-items center
    justify-content center
    min-width 10px
    max-width 10px
    width 10px
    min-height 10px
    max-height 10px
    height 10px
    margin-right 4px

    &.size-small
      justify-content flex-start

    &.centered
      justify-content flex-end

    &:last-child
      margin-right 0

  &__dot-button
    display block
    width 8px
    height 8px

    font-size 0

    background-color rgba(255, 255, 255, 0.6)
    border 0
    border-radius 50%
    transition all 0.1s ease-in-out 0s

    &:hover
    &:focus
      outline 0

    &.active-dot
      background-color #D55F59

    &.size-small
      width 6px
      height 6px

      transition all 0.1s ease-in-out 0s

    &.convex
      width 10px
      height 10px

      transition all 0.1s ease-in-out 0s

@media(min-width 1280px)
  .carousel
    & .carousel-vertical

      &__wrapper
        overflow hidden

      &__list
        position relative

        height 100%

        anim(all)
