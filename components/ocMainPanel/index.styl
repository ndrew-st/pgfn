.main-panel
  display flex
  max-height 56px
  flex-direction row
  align-items center
  box-sizing border-box
  padding 15px 22px 15px 27px
  width 100%
  background-color $violete
  position fixed
  top 0
  z-index 2

  &__switch
    margin-right 22px
    display flex
    color white
    font-size 18px
    width 18px
    cursor pointer

    &_big
      display none

      @media screen and (min-width 1280px)
        display block

    &_mid
      display none

      @media screen and (max-width 1279px)
        display block

  &__logo
    display flex
    padding $size-0 0
    margin-right 26px
    align-items center

    &_title
      font-size 18px
      margin-left 22px
      font-weight bold
      color white

      & span
        color $orange

    & img
      max-width 26px
      max-height 26px

  &__seperate
    flex 1 1 auto

  &__item-list
    display flex
    flex-direction row
    flex 1 1 auto
    justify-content space-around
    max-width 700px

  &__item
    color $white
    font-size $fs-1
    margin auto $size-1
