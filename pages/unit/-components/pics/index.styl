.pics
  display flex
  align-self center
  margin 0 -18px
  margin-top 40px

  &__vertical
    display none

    & .container__image
      width 100%

  &__carousel
    & .container__image
      width 100%

  &__button-container
    display none

.pics-carousel
  position relative

  width 100%
  max-height 400px

  &__img-container
    width 100%
    min-width 100%
    max-height 400px

  &__img-wrapper
    width 100%
    display flex
    align-items center
    max-height 400px

    overflow hidden

  &__img
    width 100%

  &__counter
    position absolute
    top 9px
    right 16px

    display inline-block
    padding 0 8px

    font-style normal
    font-weight normal
    font-size 10px
    line-height 20px
    color $secondary

    background #FFFFFF
    border-radius 12px

  &__img-description
    display none

    font-style normal
    font-weight normal
    font-size 20px
    line-height 24px
    color $dark

.pics-vertical
  display none

@media (min-width 768px)
  .pics
    max-width 880px
    margin 0 -40px
    margin-top 40px

@media (min-width 880px)
  .pics
    width 100%
    margin 0

  .pics-carousel
    &__img-wrapper
      border-radius 12px

@media (min-width 1280px)
  .pics
    position relative

    display flex
    justify-content space-between
    max-width 1280px
    margin 0 auto

    &__vertical
      display block

    &__button-container
      position absolute
      bottom 16px
      right 16px

      display block

      z-index 99

      min-width 135px
      min-height 40px

  .pics-vertical
    display block

    height 400px

    overflow hidden

    & .carousel
      height 100%

      & .carousel-vertical
        & .pics-vertical
          &__img-container
            width 384px
            min-height 192px
            max-height 192px

    &__img-container
      display flex
      align-items center
      min-width 382px
      max-width 382px
      min-height 192px
      max-height 192px
      margin-bottom 16px

      overflow hidden
      border-radius 12px

      cursor pointer

    &__img
      width 100%

      border-radius 12px

  .pics-carousel
    max-width 880px
    height 400px

    &.one-image
      max-width 100%

      & .pics-carousel__img-container
      & .pics-carousel__zoomer
        max-width 100%
        width 100%

    &__zoomer
      width 880px
      height 400px

    &__counter
      display none

    &__img-container
      display flex
      align-items center
      min-width 880px
      max-width 880px
      min-height 400px
      max-height 400px

      overflow hidden

      border-radius 12px
    &__img
      width 100%

      border-radius 12px


