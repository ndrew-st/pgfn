div.info-block-container
  padding-right 40px
  padding-left 0

  box-sizing border-box

  @media (max-width 1280px)
    padding-right 20px

  @media (max-width 768px)
    padding-right 0

.name
  font-style normal
  font-weight normal
  font-size 18px
  line-height 22px
  color $dark

  @media (max-width 768px)
    font-size 16px
    line-height 20px

.desc
  font-style normal
  font-weight normal
  font-size 14px
  line-height 17px
  display flex
  align-items center
  color $dark
  margin-bottom 12px

  @media (max-width 768px)
    font-size 13px
    line-height 16px

  &__bold
    font-weight bold
    white-space pre

    &--rouble
      font-family Rouble Sans

    @media (max-width 768px)
      font-size 13px
      line-height 16px

  &__grey
    color $secondary
    white-space pre

    @media (max-width 768px)
      font-size 13px
      line-height 16px



