.info-unit
  margin-bottom 65px

  @media (max-width 768px)
    padding-top 20px

  &:last-of-type
    margin-bottom 0

  &__title
    margin-bottom 24px

    font-style: normal;
    font-weight: bold;
    font-size: 24px;
    line-height: 29px;
    color: #272528;

    @media (max-width 768px)
      font-size: 20px;
      line-height: 24px;

  &__content
    margin 0

    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    line-height: 22px;
    color: #272528;

    @media (max-width 768px)
      font-size: 16px;
      line-height: 20px;
