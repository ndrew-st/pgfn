.tariff
  margin-bottom 12px
  position relative

.info-block-container
  .info-unit
    margin-bottom 24px

    @media (max-width 768px)
      padding-top 20px

    &__title
      margin-bottom 16px

      @media (max-width 768px)
        font-size: 20px;
        line-height: 24px;

    &__list
      margin 0
      padding 0

      list-style none

    &__item
      margin-bottom 5px

      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 22px;
      color: #272528;

      @media (max-width 768px)
        font-size: 16px;
        line-height: 20px;

      &:last-child
        margin-bottom 0
