div.info-block-container
  padding-left 40px
  padding-right 40px

  box-sizing border-box

  @media (max-width 1280px)
    padding-left 20px
    padding-right 20px

  @media (max-width 768px)
    padding-right 0
    padding-left 0

  .info-unit
    margin-bottom 24px

    @media (max-width 768px)
      padding-top 20px

    &__title
      margin-bottom 16px

      @media (max-width 768px)
        font-size: 20px;
        line-height: 24px;

    &__list
      margin 0
      padding 0

      list-style none

    &__item
      margin-bottom 5px

      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 22px;
      color: #272528;

      @media (max-width 768px)
        font-size: 16px;
        line-height: 20px;

      &:last-child
        margin-bottom 0
