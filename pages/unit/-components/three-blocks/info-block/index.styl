.h1
  margin-bottom 60px

  font-style normal
  font-weight bold
  font-size 32px
  line-height 39px
  color $dark

  @media (max-width 768px)
    font-size 20px
    line-height 24px
    margin-top 24px
    margin-bottom 24px

.href-all-items
  font-style normal
  font-weight bold
  font-size 16px
  line-height 20px
  color $dark
  text-decoration none
  position absolute
  bottom 50px

  @media (max-width 768px)
    bottom auto
    left 0
    font-size 14px
    line-height 17px


