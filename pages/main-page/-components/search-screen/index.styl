.search-screen
  height 100vh
  background-image url('/main-background.jpg')
  background-size cover
  display flex
  flex-direction column
  
  &__header
    font-size 26px

  &__row
    display flex
    flex-direction row
    width 100%
    margin-top $size-2

    &_button
      justify-content flex-end

  &__form
    background $white
    padding $size-2 * 2
    color $gray-2
    box-shadow 0px 0px 30px 5px $black
    max-width 400px
    margin $size-3 * 2

    &_left input
      border-radius 0 .25rem .25rem 0
      
    &_right input
      border-radius .25rem 0 0 .25rem

