.search-screen
  height 100vh
  background-image url('/main-background.jpg')
  background-size cover
  display flex
  flex-direction column

  &__header
    font-size 32px
    font-weight bold

  &__row
    display flex
    flex-direction row
    width 100%
    margin-top $size-2

    & > *
      flex 1

    &_button
      margin 5px 10px

  &__form
    background $white
    padding $size-2 * 2
    color $gray-2
    box-shadow 0px 0px 20px 0 $gray-2
    max-width 400px
    border-radius 20px
    margin 100px

    &_input
      padding 5px 10px

      input
        border-radius .25rem

