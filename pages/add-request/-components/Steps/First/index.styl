.container
  display flex
  flex-wrap wrap

  &__location
    max-width 491px
    width 100%
    margin 0 auto
    margin-bottom 50px

  .location
    &__item
      height auto

      &:first-child
        margin-bottom 40px

      &:nth-child(2)
        margin-bottom 24px

    &__input
      width 100%

  .result-check
    flex-basis 100%
    margin 0
    margin-bottom 20px
    padding 0

    list-style none

@media (min-width 1280px)
  .container
    &__location
      margin 0
      margin-right 145px
      margin-bottom 10px

    .result-check
      flex-basis auto
