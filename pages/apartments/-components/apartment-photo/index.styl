.apartment-photo
  margin-top 56px
  display flex

  &__left
    width 60%
    position relative

  &__left-img
    width 100%

  &__right
    width 40%

  &__right-img
    width 100%

  &__maps
    width 100%
    position relative
    flex 2 1 auto

    &_info
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0,0,0,.7)
      color white

    &_yandex
      width 100%
      height 40vh

.arrow-box__left
    width 44px
    height 44px
    border-radius 50%
    background-color rgb(255, 255, 255)
    opacity 0.7
    position absolute
    top 50%
    cursor pointer
    margin 0 0 0 20px
    &__inner
      width 36px
      height 36px
      border 1px solid rgb(210, 210, 210)
      border-radius 50%
      margin 3px 0 0 3px
      display flex
      justify-content center
      &__svg
        width 16px
        transform rotate(90deg)

.arrow-box__right
    width 44px
    height 44px
    border-radius 50%
    background-color rgb(255, 255, 255)
    opacity 0.7
    position absolute
    top 50%
    right 20px
    cursor pointer
    &__inner
      width 36px
      height 36px
      border 1px solid rgb(210, 210, 210)
      border-radius 50%
      margin 3px 0 0 3px
      display flex
      justify-content center
      &__svg
        width 16px
        transform rotate(-90deg)
.info-block
  position absolute
  bottom 50px
  text-align center
  color rgb(255, 255, 255)
  width 100%

.thumb-up
  height 15px
  margin: 10px 15px 0 15px

.thumb-down
  height 15px
  margin: 10px 15px 0 15px
  transform: rotate(180deg)

.look-all
  color rgb(255, 255, 255)
  text-align center
  margin-top -44px
  margin-bottom 8px

.ap-info1
  font-size: 15px
  font-weight: bold
