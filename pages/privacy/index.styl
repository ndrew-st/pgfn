.privacy
  margin-top 40px

  &__title
    padding-bottom 32px
    margin-bottom 31px

    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0.2px;
    text-transform: uppercase;
    color: $dark

    border-bottom 2px solid #F3F3F3

  &__item-title
    margin-bottom 24px

    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 40px;
    letter-spacing: 0.2px;
    color: $dark

  &__container
    width 88%
    margin 0 auto

  &__list
    margin 0
    padding 0

    list-style none

  &__item
    padding-bottom 32px
    margin-bottom 31px

    border-bottom 2px solid #F3F3F3

    &:last-child
      margin-bottom 0

      border-bottom 0

  &__unit
    margin-bottom 20px

    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 24px;
    color: #000000;

  &__footer
    display flex
    align-items center

    padding 15px 0

    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 24px;
    letter-spacing: 0.2px;
    color: #989BA8;

    &--desc
      margin-right 5px

  .item-privacy
    &__list
      margin 0
      padding 0

      list-style none

    &__item
      padding-left 5px

@media (min-width 1280px)
  .privacy
    margin-top 174px

    &__title
      padding-bottom 52px
      margin-bottom 51px

      font-weight normal
      font-size: 40px;
      line-height: 40px;

    &__item-title
      margin-bottom 40px

      font-size: 32px;
      line-height: 40px;

    &__unit
      font-size: 16px;
      line-height: 26px;
      color: $dark
      font-weight normal

    &__container
      max-width 1280px
      margin 0 auto

    &__content
      margin 0 auto

    &__footer
      padding-top 19px
      padding-bottom 44px

      font-size 14px
