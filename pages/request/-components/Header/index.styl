.header
  .header-top
    min-height 54px
    padding 18px
    padding-bottom 13px
    margin-bottom 4px

    box-sizing border-box

    border-bottom 1px solid $light

    &__container
      display flex
      align-items center
      justify-content space-between
      max-width 1280px
      margin 0 auto

    &__list
      display: flex;
      align-items: center;
      margin 0
      padding 0
      margin-left 8px
      margin-right auto

      list-style none

    &__item
      position relative

      padding-left 13px

      font-style: normal;
      font-weight: normal;
      font-size: 13px;
      line-height: 16px;

      color: #989BA8;

      &:before
        content ''

        position absolute
        left 5px
        top 1px
        bottom 0

        width 2px
        height 2px
        margin auto 0

        border-radius 50%
        background-color $secondary

      &:first-child
        padding-left 0

        &:before
          display none

      &--desktop
        display none

    &__save
      font-style: normal;
      font-weight: normal;
      font-size: 14px;
      line-height: 24px;
      letter-spacing: -0.1px;
      color: $black-1

      &--desktop
        display none

  .stat-bar
    width 94%
    margin 0 auto

    &__line
      position relative

      display flex
      align-items center
      width 100%
      margin-bottom 0

    &__description
      margin-top 3px

      font-style: normal;
      font-weight: bold;
      font-size: 12px;
      line-height: 32px;
      letter-spacing: 0.3px;
      text-transform: uppercase;
      color: $black-1

@media (min-width 768px)
  .header
    .header-top
      padding-left 40px
      padding-right 40px
      padding-bottom 15px

@media (min-width 1280px)
  .header
    .header-top
      padding-top 36px
      padding-left 0
      padding-right 0
      padding-bottom 30px
      margin-bottom 16px

      &__list
        margin-left 11px

      &__item
        font-size: 18px;
        line-height: 22px

        &--mobile
          display none

        &--desktop
          display block

      &__save
        position relative

        padding-left 31px

        font-size: 18px;
        line-height: 22px

        &:before
          content ''

          position absolute
          left 0
          top 0
          bottom 0

          width 20px
          height 20px

          background url('/icons/check.svg') no-repeat
          background-size 20px 20px

        &--mobile
          display none

        &--desktop
          display block

    .stat-bar
      width 100%
      max-width 1280px

      &__description
        font-size 14px
