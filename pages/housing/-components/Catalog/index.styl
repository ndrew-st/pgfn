.catalog
  width 100%

  &__map
    display none
    height 360px
    margin-bottom 72px

  &__list
    display flex
    flex-wrap wrap
    justify-content center
    width 100%
    margin 0
    padding 0 18px

    list-style none

    box-sizing border-box

    @media (min-width 604px)
      justify-content space-between

  &__item
    margin-bottom 52px

@media (min-width 768px)
  .catalog
    &__list
      padding 0 40px

@media (min-width 1280px)
  .catalog
    &__map
      display block

    &__list
      padding 0

    &__item
      margin-bottom 72px
