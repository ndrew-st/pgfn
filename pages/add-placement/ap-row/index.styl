.ap-row
    padding-bottom 20px
    position relative

    &__flex
        display flex

    &__checkbox
        background #FFFFFF
        border 1px solid #DADADA
        box-sizing border-box
        border-radius 4px
        width 24px
        height 24px
        flex-shrink 0
        display flex
        justify-content center
        align-items center
        transition all 0.3s ease-in-out 0s
        cursor pointer

        &--black
            background $dark
            border none

    &__span
        margin-left 20px
        margin-top 5px
        width 122px
        cursor pointer

    &__def
        font-size 14px
        color #3D88C8
        position absolute
        bottom 1px
        left 169px

    &__v
        margin-left 20px