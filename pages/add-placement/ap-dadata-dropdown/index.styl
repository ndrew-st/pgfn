.ap-dadata-dropdown
  position relative

  &__ul
    background-color #ffffff
    box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
    border-radius 3px
    list-style none
    position absolute
    left 0
    top 100%
    z-index 9
    width 473px
    margin 0
    padding 0 0 0 18px

  &__li
    font-family Calibri
    font-style normal
    font-weight normal
    font-size 16px
    line-height 20px
    color #272528
    padding 5px 0
    transition all 0.1s
    cursor pointer

    &:hover
      background-color #0082B4
      color #FFFFFF