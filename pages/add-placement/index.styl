.add-placement
    margin 36px 80px

    &__flex-sb
        display flex
        justify-content space-between
        margin-bottom 48px

    &__flex
        display flex

    &__arrow
        margin-top 5px

    &__path
        font-family Calibri
        font-style normal
        font-weight normal
        font-size 18px
        line-height 22px
        display flex
        align-items center
        color #989BA8
        margin-left 11px
        width 100%

    &__all-changes-saved
        font-family Calibri
        font-style normal
        font-weight normal
        font-size 18px
        line-height 22px
        display flex
        align-items center
        text-align center
        color $dark
        margin-left 11px

    &__step
        margin-top 7px
        margin-left 12px
        margin-bottom 40px
        font-family Calibri
        font-style normal
        font-weight bold
        font-size 14px
        line-height 32px
        letter-spacing 0.3px
        text-transform uppercase
        color $dark

    &__red-star
        color #CA1F03

    &__h
        font-family Calibri
        font-style normal
        font-weight bold
        font-size 32px
        line-height 24px
        letter-spacing 0.2px
        color $dark
        // margin-top 40px

    &__h2
        font-family Calibri
        font-style normal
        font-weight bold
        font-size 18px
        line-height 20px
        color $dark

    &__p
        font-family Calibri
        font-style normal
        font-weight bold
        font-size 14px
        line-height 32px
        letter-spacing 0.3px
        text-transform uppercase
        color $dark

    &__mt24
        margin-top 24px

    &__mt48
        margin-top 48px

    &__uppercase
        text-transform uppercase