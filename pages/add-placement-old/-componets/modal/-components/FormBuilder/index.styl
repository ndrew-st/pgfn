button()
  display block
  margin-top: 10px;
  width: 100px;
  height 20px;

  color: white;
  font-size: 15px;
  line-height: 1.4;

  background-color: rgb(125, 42, 232);
  border: 0;
  border-radius: 2px;
  cursor: pointer;

.modal-form
  height 495px
  padding 0 30px
  padding-top: 20px;
  padding-bottom: 5px;

  overflow auto
  box-sizing: border-box;

  &__content
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);

  &__error
    display: block;
    margin: 10px 0;

    color: red;

  &__label
    margin-bottom: 5px;

    font-size: 20px;
    font-weight: 700;
    color: rgb(84, 84, 84);

  &__desc
    margin-bottom: 5px;

    font-size: 15px;
    font-weight: 400;
    color: rgb(166, 166, 166);
    text-decoration: none;

  &__next
    button()

  &__submit
    button()
