[
  {
    "name": "Жильё · Квартира/апартаменты целиком",
    "fields": [
      {
        "type": "Select",
        "label": "Тип предложения",
        "name": "type-tender",
        "params": {
          "validation": "required",
          "main": true,
          "placeholder": "Выберите 1 вариант",
          "request": "get:options-type-tender",
          "options": [
            {
              "value": "Sale",
              "name": "Продажа"
            },
            {
              "value": "Buy",
              "name": "Покупка"
            }
          ]
        }
      },
      {
        "type": "Select",
        "name": "category",
        "params": {
          "main": true,
          "validation": "required",
          "label": "Категория",
          "depend": "type-tender",
          "placeholder": "Выберите 1 вариант",
          "request": "get:options-category",
          "options": [
            {
              "value": "cat-1",
              "name": "Category 1"
            },
            {
              "value": "cat-2",
              "name": "Category 2"
            }
          ]
        }
      },
      {
        "type": "CheckBoxes",
        "name": "deadlines",
        "params": {
          "depend": "category",
          "validation": "required",
          "label": "Сроки размещения",
          "desc": "Можно выбрать несколько вариантов (минимум 1).",
          "children": [
            {
              "name": "daily",
              "label": "Посуточно",
              "desc": "Аренда жилья от 1х суток"
            },
            {
              "name": "from-5-days",
              "label": "От 5 дней (необходимо для участия в турах)",
              "desc": "Цена за аренду от 5 суток – более выгодное предложение для гостя по стоимости, чем посуточная аренда."
            },
            {
              "name": "long-term",
              "label": "На длительный срок (от 1 месяца)",
              "desc": "Длительная аренда сроком от 1-го месяца – более выгодное предложение для гостя по стоимости, чем остальные варианты."
            }
          ]
        }
      }
    ]
  },
  {
