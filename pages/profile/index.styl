.change-button
    position: absolute
    width: 112px
    height: 40px
    right: 0px
    top: 40px
    background: #FFFFFF
    border: 1px solid #DADADA
    box-sizing: border-box
    border-radius: 20px
    font-family: Calibri
    font-style: normal
    font-weight: normal
    font-size: 18px
    line-height: 28px
    color: #989BA8
    text-align: center
    padding: 7px 0 5px 0
    cursor: pointer
    -webkit-touch-callout: none /* iOS Safari */
    -webkit-user-select: none /* Chrome/Safari/Opera */
    -khtml-user-select: none /* Konqueror */
    -moz-user-select: none /* Firefox */
    -ms-user-select: none /* Internet Explorer/Edge */
    user-select: none


