.profile-page
  margin 0 auto
  max-width 1280px
  margin-top 148px
  margin-bottom 80px
  padding 0 40px

  &__list
    margin-bottom 60px

  &__cont
    display flex

.div1
    width 679px
    margin-bottom 60px
    position relative
    border-bottom 1px solid #ECECEC

.p1
    font-style normal
    font-weight bold
    font-size 32px
    line-height 24px
    letter-spacing 0.2px
    color #272528
    margin-bottom 24px

.p2
    font-style normal
    font-weight normal
    font-size 14px
    line-height 20px
    color #989BA8
    padding-top 32px

.p3
    font-style normal
    font-weight bold
    font-size 18px
    line-height 20px
    color #272528
    margin-bottom 34px
    margin-top 8px

.p5
    font-style normal
    font-weight normal
    font-size 14px
    line-height 20px
    color #989BA8
    mt 8px

.change-button
  position absolute
  width 112px
  height 40px
  right 0px
  top 40px
  background #FFFFFF
  border 1px solid #DADADA
  box-sizing border-box
  border-radius 20px

  font-style normal
  font-weight normal
  font-size 18px
  line-height 28px
  color #989BA8
  text-align center
  padding 7px 0 5px 0
  cursor pointer
  -webkit-touch-callout none /* iOS Safari */
  -webkit-user-select none /* Chrome/Safari/Opera */
  -khtml-user-select none /* Konqueror */
  -moz-user-select none /* Firefox */
  -ms-user-select none /* Internet Explorer/Edge */
  user-select none

.input-name
  width 276px
  height 56px
  margin-bottom 34px

.btn-save
  align-self flex-start
  background #3D88C8
  border-radius 4px

  font-style normal
  font-weight bold
  font-size 16px
  line-height 24px
  text-align center
  letter-spacing 0.1px
  color #FFFFFF
  padding 17px 0 15px 0
  margin-left 16px
  width 138px
  // height 24px
  border none
  outline none


@media (max-width 700px)
  .div1
    width 284px
    margin-bottom 28px

  .btn-save
    margin-left 0
    width 292px

  .profile-page
    padding 0 18px

    box-sizing border-box

    &__list
      margin-bottom 28px

    &__cont
      flex-wrap wrap

@media (min-width 1280px)
  .profile-page
    padding 0


