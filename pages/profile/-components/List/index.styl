.container
  &__title
    margin 0

    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 24px;
    display: flex;
    align-items: center;
    letter-spacing: -0.1px;
    color: $dark

  &__list
    margin 0
    padding 0

    list-style none

  &__nothing
    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 20px;
    color: #989BA8;

@media (min-width 1280px)
  .container
    &__title
      font-size 20px

    &__nothing
      font-size 14px
