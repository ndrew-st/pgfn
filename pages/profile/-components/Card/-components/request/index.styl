.card
  display flex
  flex-wrap wrap
  justify-content center
  padding 20px

  box-sizing border-box

  &__map
    margin-bottom 12px
    width: 100%
    max-width 244px
    height: 120px;

    border-radius 12px
    overflow hidden

  &__type-house
    display none

  &__state
    display none

  &__reviews
    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 28px;
    color: $secondary

    &--desktop
      display none

  &__date
    font-style: normal;
    font-weight: normal;
    font-size: 13px;
    line-height: 28px;
    color: $secondary

  &__container
    flex-basis 100%
    margin-bottom 24px

  &__footer
    display flex
    justify-content space-between
    flex-basis 100%

  &__price

    &--mobile
      display none

    &--desc
      display block

      font-style: normal;
      font-weight: normal;
      font-size: 13px;
      line-height: 20px;
      color: #272528;

    &--text
      font-style: normal;
      font-weight: bold;
      font-size: 20px;
      line-height: 28px;
      color: $dark

    &--rouble
      font-family Rouble sans
      font-size 19px

    &--measure
      font-style: normal;
      font-weight: normal;
      font-size: 13px;
      line-height: 20px;
      color: $secondary

@media (min-width 1280px)
  .card
    flex-wrap nowrap
    justify-content space-between
    max-width 1280px
    margin 0 auto
    padding 28px

    &__map
      margin-bottom 0

    &__reviews
      font-size 18px

      &--mobile
        display none

      &--desktop
        display block

    &__price
      &--mobile
        display none

      &--desktop
        display flex
        align-items center
        margin-bottom 8px

      &--desc
        margin-right 6px

        font-size 20px

      &--text
        margin-right 5px

        line-height 20px

      &--rouble
        line-height 20px

      &--measure
        align-self flex-end
        display inline-block
        margin-left 8px

        line-height 13px

    &__title
      display inline-block
      max-width 560px
      margin 0
      margin-right -90px

    &__type-house
      display block
      margin-bottom 12px

      font-style: normal;
      font-weight: bold;
      font-size: 20px;
      line-height: 24px;
      letter-spacing: 0.2px;
      color: $dark

    &__attr
      display none

    &__date
      margin-bottom 4px

      font-size 18px

    &__state
      display flex
      justify-content flex-end
      flex-basis 100%

      margin-bottom 12px

      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 20px;
      color: $dark

    &__container
      margin-left 28px
      margin-bottom 0

    &__footer
      flex-wrap wrap
      flex-basis auto
      justify-content flex-end
      align-items flex-start
      align-content flex-start
      min-width 482px
