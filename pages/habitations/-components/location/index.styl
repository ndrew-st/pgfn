.loc
    &__box
        border-bottom 1px solid #ECECEC
        max-width 1280px
        margin auto


    &__h

        font-style normal
        font-weight bold
        font-size 32px
        line-height 39px
        color $dark
        margin-top 72px

        @media (max-width 768px)
            font-size 20px
            line-height 24px
            margin-top 42px



    &__a

        font-style normal
        font-weight normal
        font-size 18px
        line-height 22px
        color #000000

        @media (max-width 768px)
            font-size 16px
            line-height 20px



    &__ahover
        text-decoration-line underline


    &__span

        font-style normal
        font-weight normal
        font-size 18px
        line-height 22px
        color #000000
        white-space pre

        @media (max-width 768px)
            font-size 16px
            line-height 20px



    &__flex
        display flex
        margin-top 28px


    &__inline
        display inline


    &__yandex-map-content
        max-width 1280px
        max-height 440px
        margin-top 28px


    &__desc

        font-style normal
        font-weight normal
        font-size 18px
        line-height 20px
        letter-spacing 0.2px
        color $dark
        margin-top 33px


    &__read-more

        font-style normal
        font-weight bold
        font-size 18px
        line-height 24px
        letter-spacing 0.1px
        color $dark
        margin-top 12px
        margin-bottom 71px


