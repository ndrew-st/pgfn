.fade-enter-active
.fade-leave-active
  transition: opacity .1s

.fade-enter
.fade-leave-to
  opacity 0

.popup
  &__header
  &__footer
    display none

.show-popup
  position fixed
  top 0
  left 0

  width: 100%
  height: 100%

  background-color white
  z-index 9999

  .popup
    &__header
    &__footer
      display block

@media (min-width 1280px)
  .show-popup
    &.popup
      padding-top 120px

      & .popup__footer
        display none

      & .popup-header
        &__counter
          position absolute
          top 38px
          left 0
          right 0

          margin 0 auto
          max-width 50px

          font-style: normal;
          font-weight: normal;
          font-size: 18px;
          line-height: 28px;
          color: #272528;

        &__button-close
          position absolute
          left 5.5%
          top 28px

          display flex
          align-items center
          justify-content center
          padding: 0
          min-width 135px
          min-height 40px

          font-style: normal;
          font-weight: normal;
          font-size: 18px;
          line-height: 22px;
          text-align: center;
          color: #272528;
          text-transform capitalize

          background: #FFFFFF;
          border: 1px solid #D4D6DE;
          box-sizing: border-box;
          border-radius: 44px

          z-index 99
          cursor pointer
          transition all 0.1s ease-in-out 0s

          &:hover
          &:focus
            outline 0

          &:hover
            color #0082B4

            transition all 0.1s ease-in-out 0s

          &:focus
            font-weight: bold;
            line-height: 28px;
            color: #272528;

            border: 1.4px solid #272528;

            transition all 0.1s ease-in-out 0

      & .pics-carousel
        &__img-container.carousel-img-container
          flex-wrap wrap
          max-width 976px
          min-width 976px
          max-height 100%
          min-height 716px

        &__img-wrapper
          width 976px
          height 716px

        &__img-description.carousel-img-description
          display block
          margin-top 30px

        &__zoomer.carousel-zoomer
          width 976px
          height 716px

    & .carousel
      max-width 976px
      margin 0 auto

      &__dots-container
        display none
