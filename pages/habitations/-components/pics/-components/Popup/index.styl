.fade-enter-active
.fade-leave-active
  transition: opacity .1s

.fade-enter
.fade-leave-to
  opacity 0

.popup
  &__header
  &__footer
    display none

  &__counter
    display flex
    justify-content center
    margin 0 auto

    font-style: normal
    font-weight: normal
    font-size: 10px
    line-height: 20px

    color: #989BA8

.show-popup
  position fixed
  top 0
  left 0

  width: 100%
  height: 100%

  background-color white
  z-index 9999

  .popup
    &__footer
      display block

@media (min-width 1280px)
  .popup
    .carousel
      .btn-carousel
        &__prev
          left 28px

        &__next
          right 28px

  .show-popup
    &.popup
      padding-top 100px

      & .popup__footer
        display none

      & .popup-header
        display block

        &__counter
          position absolute
          top 38px
          left 0
          right 0

          margin 0 auto
          max-width 50px

          font-style: normal
          font-weight: normal
          font-size: 18px
          line-height: 28px
          color: #272528

        &__button-close
          position absolute
          left 5.5%
          top 28px

      & .pics-carousel
        &__img-container.carousel-img-container
          flex-wrap wrap
          max-width 976px
          min-width 976px
          max-height 100%

        &__img-wrapper
          width 976px
          height 100%
          max-height 651px

        &__img-description.carousel-img-description
          display block
          margin-top 30px

        &__zoomer.carousel-zoomer
          width 976px
          height 651px

      & .carousel-img-container
        &__wrapper
          display flex
          align-items center
          min-height 716px
          max-height 716px

    & .carousel
      max-width 976px
      margin 0 auto

      &__dots-container
        display none

      .btn-carousel
        &__prev
          left -116px

        &__next
          right -116px
