.hab-rules
    &__p
        margin-top 36px
        margin-bottom 24px

        font-style normal
        font-weight bold
        font-size 20px
        line-height 24px
        color $dark

        @media (max-width 768px)
            font-size 18px
            margin-top 20px
            margin-bottom 16



    &__ul
        display flex
        list-style none
        margin 0
        padding 0

        @media (max-width 768px)
            flex-direction column



    &__flex
        display flex

        @media (max-width 768px)
            flex-direction column



    &__span
        margin-left 5px
        margin-right 5px

        &__first
            margin-left 0


        @media (max-width 768px)
            margin-left 0



    &__p3, &__li

        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        color $dark

        @media (max-width 768px)
            font-size 13px
            line-height 16px



    &__p4

        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        color $secondary
        padding-bottom 23px
        border-bottom 1px solid #DADADA
        margin-top 20px

        @media (max-width 768px)
            font-size 14px
            padding-bottom 15px
            margin-top 16px




.money
    &__section2
        margin-top 24px
        margin-bottom 24px

        @media (max-width 768px)
            margin-top 16px
            margin-bottom 16px


        &__flex
            display flex
            margin-top 12px

            @media (max-width 768px)
                margin-top 8px




    &__man-head
        margin-top 2px

        @media (max-width 768px)
            margin-top 0



    &__guest
        margin-left 10px

        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        color $dark

        @media (max-width 768px)
            font-size 13px
            line-height 16px



    &__calendar
        margin-top 3px

        @media (max-width 768px)
            margin-top 0



    &__sector3
        margin-top 24px
        padding-top 24px
        border-top 1px solid #DADADA

        &__flex
            display flex
            justify-content space-between


        @media (max-width 768px)
            margin-top 16px
            padding-top 16px



    &__goods

        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        color $dark

        @media (max-width 768px)
            font-size 13px
            line-height 16px



