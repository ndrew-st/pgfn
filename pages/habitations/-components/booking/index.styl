.hab-booking
    background rgba(0, 0, 0, 0.31)
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    height 100%
    z-index 100
    overflow auto

    &__container
        background #FFFFFF
        box-shadow 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.08)
        border-radius 12px
        max-width 720px
        margin auto
        margin-top 80px

        @media (max-width 768px)
            margin-top 28px

    &__top-line
        display flex
        padding-bottom 29px
        border-bottom 1px solid #F3F3F3

        @media (max-width 768px)
            padding-bottom 11px

    &__cross
        margin-top 43px
        margin-left 43px
        cursor pointer

        @media (max-width 768px)
            margin-top 22px
            margin-left 18px

    &__h

        font-style normal
        font-weight bold
        font-size 20px
        line-height 24px
        text-align center
        color $dark
        margin-top 37px
        width 100%

        @media (max-width 768px)
            font-size 15px
            line-height 24px
            margin-top 16px

    &__content
        margin-right 40px
        margin-left 40px

        @media (max-width 768px)
            margin-right 18px
            margin-left 18px

    &__tabs
        display flex
        margin-top 21px

        @media (max-width 768px)
            margin-top 8px

    &__btn
        margin-right 20px
        padding-bottom 12px
        cursor pointer

        font-style normal
        font-weight normal
        font-size 18px
        line-height 24px
        letter-spacing 0.2px
        color $secondary
        transition border 0.3s ease-in-out 0s
        border-bottom 2px solid #ffffff
        -webkit-touch-callout none /* iOS Safari */
        -webkit-user-select none /* Chrome/Safari/Opera */
        -khtml-user-select none /* Konqueror */
        -moz-user-select none /* Firefox */
        -ms-user-select none /* Internet Explorer/Edge */
        user-select none

        &__active
            border-bottom 2px solid $primary


        @media (max-width 768px)
            font-size 13px
            line-height 24px
            padding-bottom 7px

    &__footer
        border-top 1px solid #DADADA
        padding 28px 40px
        display flex
        justify-content space-between
        align-items center

        @media (max-width 768px)
            flex-direction column
            align-items flex-start
            padding 18px

        &__btn
            padding 0 36px
            margin-left 47px

            box-sizing border-box

            @media (max-width 768px)
                margin-left 0
                padding 0
                width 284px
                margin-top 16px

    &__p-booking

        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        color $dark


    &__bold

        font-style normal
        font-weight bold
        font-size 16px
        line-height 20px
        color $dark

.money
    &__flex
        display flex
        margin-top 40px
        padding-bottom 35px
        border-bottom 1px solid #DADADA

        @media (max-width 768px)
            flex-direction column
            padding-bottom 23px
            margin-top 6px

    &__img > img
        width 166px
        height 112px
        border-radius 8px

        @media (max-width 768px)
            width 135px
            height 90px
            border-radius 12px

    &__right
        margin-left 20px

        @media (max-width 768px)
            margin-left 0



    &__app-name

        font-style normal
        font-weight bold
        font-size 20px
        line-height 24px
        color $dark

        @media (max-width 768px)
            margin-top 8px



    &__flex-rate
        display flex
        margin-top 8px

        @media (max-width 768px)
            margin-top 12px



    &__rate
        width 36px
        height 23px
        padding-top 5px
        background $danger
        border-radius 4px

        font-style normal
        font-weight bold
        font-size 16px
        line-height 20px
        display flex
        justify-content center
        letter-spacing -0.5px
        text-transform uppercase
        color #FFFFFF


    &__hotel
        margin-left 10px
        padding-top 6px

        font-style normal
        font-weight normal
        font-size 14px
        line-height 20px
        color $secondary


    &__adress
        margin-top 24px

        font-style normal
        font-weight normal
        font-size 14px
        line-height 20px
        color $dark

        @media (max-width 768px)
            margin-top 12px



    &__comfort

        font-style normal
        font-weight normal
        font-size 14px
        line-height 20px
        color $secondary

        @media (max-width 768px)
            margin-top 4px



