.filter
  display none

@media(min-width 960px)
  .filter
    position relative
    display block
    max-width 960px
    margin 0 auto
    min-height 180px
    margin-bottom 70px

    background: #FFFFFF;
    box-shadow: 0px 2px 30px rgba(0, 0, 0, 0.1), 0px 4px 8px rgba(0, 0, 0, 0.04);
    border-radius: 12px;

    z-index 9
    
    @media(min-width 1280px)
      margin-top -56px

    &__content
      min-height 124px
      padding 24px
      padding-top 12px

      box-sizing border-box