.loc
  box-sizing border-box

  &__box
    max-width 1280px
    margin auto
    padding-bottom 71px

    @media (max-width 768px)
      padding-bottom 24px

  &__h
    font-style normal
    font-weight bold
    font-size 32px
    line-height 39px
    color #272528
    margin-top 72px
    margin-bottom 20px

    @media (max-width 768px)
      font-size 20px
      line-height 24px
      margin-top 42px

  &__a
    font-style normal
    font-weight normal
    font-size 18px
    line-height 22px
    color #000000

    @media (max-width 768px)
      font-size 16px
      line-height 20px

  &__a:hover
    text-decoration-line underline

  &__span
    font-style normal
    font-weight normal
    font-size 18px
    line-height 22px
    color #000000
    white-space pre

    @media (max-width 768px)
      font-size 16px
      line-height 20px

  &__flex
    display flex
    margin-top 28px

  &__inline
    display inline

  &__yandex-map-content
    max-width 1280px
    height 440px

    box-sizing border-box

    @media (max-width 768px)
      height 266px
      margin-top 28px

  &__desc
    font-style normal
    font-weight normal
    font-size 18px
    line-height 20px
    letter-spacing 0.2px
    color #272528
    margin-top 33px

  &__read-more
    font-style normal
    font-weight bold
    font-size 18px
    line-height 24px
    letter-spacing 0.1px
    color #272528
    margin-top 12px
    cursor pointer
