.flex
    display flex


.three-blocks
    margin-top 40px
    border-top 1px solid #ECECEC
    padding-top 40px
    padding-bottom 40px
    border-bottom 1px solid #ECECEC
    max-width 1280px
    margin auto
    position relative

    @media (max-width 768px)
        flex-direction column
        border none
        margin-top 0
        padding-top 0



div.info-block-1
    padding-right 40px
    border-right 1px solid #ECECEC

    @media (max-width 768px)
        border none
        padding-right 0



div.info-block-2
    padding-left 40px
    padding-right 40px
    border-right 1px solid #ECECEC

    @media (max-width 768px)
        border none
        padding-left 0
        padding-right 0
        margin-top 24px
        border-top 1px solid #ECECEC



div.info-block-3
    padding-left 40px

    @media (max-width 768px)
        padding-left 0
        margin-top 24px
        border-top 1px solid #ECECEC


